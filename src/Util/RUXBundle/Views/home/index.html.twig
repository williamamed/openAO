                                        <script src="{{ asset('Util/RUX/lib/upload/fileinput.min.js') }}"></script>
                                        <script src="{{ asset('Util/RUX/lib/upload/theme.js') }}"></script>
                                        <script src="{{ asset('Util/RUX/lib/upload/es.js') }}"></script>
                                        <script src="{{ asset('Raptor/UIR/js/uir-all.js') }}"></script>

                                         
