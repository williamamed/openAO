                            <i style="margin-right: 5px;">
                               <img src="{%if plugin('rux_icon')%}{{ plugin('rux_icon') }}{%else%}{{ asset("Util/RUX/img/logo.png") }}{%endif%}" height="40"></i>
                                {%if plugin('rux_name')%}{{ plugin('rux_name') }}{%else%}{{ appname }} {{ version }}{%endif%}
                        </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">


                            <li><a href="#!/{{ routename }}/home/description" class="function-home"><span class="glyphicon glyphicon-home" style="margin-right: 5px"></span>Inicio</a></li>
                            <li><a href="#!/{{ routename }}/profile" class="function-profile"><span class="glyphicon glyphicon-user" style="margin-right: 5px"></span>Perfil</a></li>
                            {{ plugin('rux_navbar')|raw}}
                                <li><a href="home/logout" class="function-logout"><span class="glyphicon glyphicon-log-out" style="margin-right: 5px"></span>Salir</a></li>
                            </ul>
                            <div class="navbar-form navbar-right">

                            </div>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid" uir-app="RUX">
                    <div class="row">
                        <div class="col-sm-3 col-md-2 sidebar rux-sidebar" style="overflow: hidden;height: -moz-calc(100% - 60px);height: -webkit-calc(100% - 60px);height: calc(100% - 60px);padding-bottom: 0;padding-top: 0;padding: 0pc">

                        {% if modules|length ==0 %}

                        {% else %}
                            {% for menuItem in modules %}
                                {% if menuItem['type']==2 %}
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" style="margin-bottom: 10px;">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="heading{{ menuItem['id'] }}">
                                        <h4 class="panel-title">
                                            <a class="{{ menuItem['className'] }} rux-functions3"  data-toggle="collapse"  href="#collapse{{ menuItem['id'] }}" aria-expanded="true" aria-controls="collapse{{ menuItem['id'] }}">
                                                <b class="caret rux-open-ind"></b>   {{ menuItem['name'] }}
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapse{{ menuItem['id'] }}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading{{ menuItem['id'] }}">
                                        <div class="panel-body">
                                            <ul class="nav nav-sidebar" style="">
                                                    {% for child in menuItem.children %}
                                                        {% if child['type']==0 %}
                                                    <li><a href="#javascript;;" class="{{ child['className'] }} rux-functions" route="{{ child['route'] }}">
                                                            {% if child['icon'] %}
                                                                   {% if plugin('rux_sidebar_iconbase') %}              
                                                                    <img src="{{ asset([plugin('rux_sidebar_iconbase'),child['icon'],".png"]|join()) }}" width="25">
                                                                   {% else %}
                                                                    <img src="{{ asset(["Util/RUX/menu/",child['icon'],".png"]|join()) }}" width="25">
                                                                   {% endif %}     
                                                            {% else %}
                                                                    <img src="{{ asset("Util/RUX/img/menu-item.png") }}" width="25">
                                                            {% endif %}

                                                            {{ child['name']|raw }}</a></li>
                                                        {% else %}

                                                        {% endif %}
                                                    {% endfor %}
                                                        </ul>        
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                {% endif %}
                            {% endfor %}

                            {% if modules|length>0 %}
                                        <div class="panel panel-default off-child">
                                            <div class="panel-body">
                                                <ul class="nav nav-sidebar" style="">
                            {% for menuItem in modules %}
                                {% if menuItem['type']==0 %}

                                                        <li><a href="#javascript;;" class="{{ menuItem['className'] }} rux-functions" route="{{ menuItem['route'] }}">
                                     {% if menuItem['icon'] %}
                                              {% if plugin('rux_sidebar_iconbase') %}              
                                                                        <img src="{{ asset([plugin('rux_sidebar_iconbase'),child['icon'],".png"]|join()) }}" width="25">
                                              {% else %}
                                                                        <img src="{{ asset(["Util/RUX/menu/",child['icon'],".png"]|join()) }}" width="25">
                                              {% endif %}                                  

                                     {% else %}
                                                                        <img src="{{ asset("Util/RUX/img/menu-item.png") }}" width="25">
                                     {% endif %}

                                     {{ menuItem['name'] }}</a></li>
                                {% endif %}
                            {% endfor %}                           
                                                            </ul>        
                                                        </div>
                                                    </div>
                        {% endif %}    


                        {% endif %}

                                                    {{ plugin('rux_sidebar')|raw}}
                                                </div>

                                                <div id="rux-container" class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                                                    <div  id="rux-window" style="width: 100%;height: 100%;display: none;background-size: 100%;background-position: 0 50%;" ></div>
                                                    <div  id="rux-window-cover" style="width: 100%;display: none">
                                                        <iframe  id="rux-window-frame" style="width: 100%;height: 100%;border: none;" src=""></iframe>
                                                    </div>

                                                        {{ plugin('rux_content')|raw}}
                                                </div>
                                            </div>
                                        </div>

